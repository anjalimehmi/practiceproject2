<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constraint_screen">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="398dp"
            android:layout_height="343dp"
            android:background="@drawable/cs1" />


        <ImageView
            android:id="@+id/sketch"
            android:layout_width="391dp"
            android:layout_height="270dp"
            android:src="@drawable/sketchh" />

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5FF5722">

                <TextView
                    android:id="@+id/mark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="Mark"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="55dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/attendence"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="41dp"
                    android:gravity="center"
                    android:text="Attendence"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mark"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="140dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EB3371">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/shoatten"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/show"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="Show"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="55dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="41dp"
                    android:gravity="center"
                    android:text="Attendence"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/show"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="265dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37AEE4">


                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/notebook"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="Home"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="55dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="41dp"
                    android:gravity="center"
                    android:text="Work"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/gallery"
            android:gravity="center"
            android:text="Gallery"
            android:textSize="30sp"
            android:background="#E09CB3"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="93dp"
            android:layout_marginTop="460dp"
            android:layout_marginLeft="200dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B0D189"
                android:drawableRight="@drawable/baseline_email_24"
                android:gravity="center"
                android:text="Notice"
                android:textSize="30sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="93dp"
            android:layout_marginTop="580dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8FCEEB"
                android:drawableRight="@drawable/amount"
                android:gravity="center"
                android:text="Pay fee"
                android:textSize="30sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="93dp"
            android:layout_marginTop="580dp"
            android:layout_marginLeft="200dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F68C6B"
                android:drawableRight="@drawable/amount"
                android:gravity="center"
                android:text="About"
                android:textSize="30sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>